<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten_dp"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginTop="@dimen/five_dp"
        android:layout_marginEnd="@dimen/ten_dp"
        android:layout_marginRight="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/five_dp">

        <RelativeLayout
            android:id="@+id/layout_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/five_dp">

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/circle_background"
                android:paddingLeft="15sp"
                android:paddingTop="10sp"
                android:text="1"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_Title"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_no"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:layout_toEndOf="@id/tv_no"
                android:layout_toRightOf="@id/tv_no"
                android:maxLines="1"
                android:text="@string/my_car_s_tire_is_flatten"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_Title"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:layout_toEndOf="@id/tv_no"
                android:layout_toRightOf="@id/tv_no"
                android:text="@string/_0_56_km_s_away"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_Title"
                android:gravity="right"
                android:text="@string/online"
                android:textSize="12sp"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>