<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.techease.gethelp.fragments.HomeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200sp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170sp"
            android:background="@drawable/head">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We are here to"
                android:textColor="#ffffff"
                android:textSize="26sp"
                android:layout_marginTop="30sp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:typeface="sans" />


            <TextView
                android:id="@+id/title_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" help you."
                android:textColor="#ffffff"
                android:textSize="26sp"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:typeface="sans" />



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_toRightOf="@id/title_two"
                android:layout_marginTop="5sp"
                android:src="@drawable/emoji"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_need"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@drawable/btn_dark"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What do you need ?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>


    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="5sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_availableNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Now !"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:padding="5sp"
            android:layout_marginLeft="10sp"
            android:textSize="18sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
